{
  "name": "entrelibros-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "node -r dotenv/config scripts/migrate.js",
    "test": "cross-env-shell \"DOTENV_CONFIG_PATH=.env.test node -r dotenv/config scripts/migrate.js && node -r dotenv/config ../node_modules/vitest/vitest.mjs --run\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "postgres-migrations": "^5.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "vitest": "^3.0.7"
  }
}
