{
  "name": "entrelibros",
  "private": true,
  "engines": {
    "node": ">=24 <25"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "migrate": "npm run migrate -w backend",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm test -w backend",
    "test:frontend": "npm test -w frontend",
    "format:backend": "npm run format-all -w backend",
    "format:frontend": "npm run format-all -w frontend",
    "start:backend": "npm run start -w backend",
    "start:frontend": "npm run start -w frontend",
    "build:backend": "npm run build -w backend",
    "build:frontend": "npm run build -w frontend",
    "prod": "npm run build:backend && npm run build:frontend && npm-run-all --parallel start:backend start:frontend",
    "format-all": "npm run format:backend && npm run format:frontend",
    "complete-check:backend": "npm run complete-check -w backend",
    "complete-check:frontend": "npm run complete-check -w frontend",
    "complete-check": "npm run complete-check:backend && npm run complete-check:frontend"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
